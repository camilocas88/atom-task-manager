rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - solo lectura desde el backend
    match /users/{userId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Tasks collection - solo lectura/escritura desde el backend
    match /tasks/{taskId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
